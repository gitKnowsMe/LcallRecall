{
  "name": "localrecall",
  "version": "1.0.0",
  "description": "Private local RAG desktop application with Phi-2 and FAISS",
  "main": "index.js",
  "scripts": {
    "electron": "NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run frontend:dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "npm run build:production && electron-builder",
    "frontend:dev": "cd app && npm run dev",
    "frontend:build": "cd app && npm run build",
    "frontend:start": "cd app && npm run start",
    "backend:dev": "cd backend && python -m uvicorn app.main:app --reload --host 127.0.0.1 --port 8000",
    "backend:install": "cd backend && pip install -r requirements.txt",
    "backend:build": "./scripts/build-backend.sh",
    "dev": "concurrently \"npm run backend:dev\" \"npm run electron:dev\"",
    "build": "npm run frontend:build && npm run electron:pack",
    "build:production": "npm run frontend:build && npm run backend:build",
    "dist": "npm run build:production && npm run electron:dist",
    "postinstall": "npm install --prefix app"
  },
  "keywords": [
    "electron",
    "desktop",
    "rag",
    "ai",
    "local",
    "privacy",
    "phi-2",
    "faiss",
    "nextjs",
    "fastapi"
  ],
  "author": "LocalRecall Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.localrecall.app",
    "productName": "LocalRecall",
    "copyright": "Copyright Â© 2025 LocalRecall Team",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "index.js",
      "electron/**/*",
      "app/build/**/*",
      "package.json",
      "!**/node_modules/**/*",
      "!backend/**/*"
    ],
    "extraResources": [
      {
        "from": "build/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "PDF Document",
            "CFBundleTypeExtensions": ["pdf"],
            "CFBundleTypeIconFile": "icon.icns",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate"
          }
        ],
        "NSCameraUsageDescription": "LocalRecall needs camera access for document scanning (optional feature).",
        "NSMicrophoneUsageDescription": "LocalRecall needs microphone access for voice input (optional feature).",
        "NSAppleEventsUsageDescription": "LocalRecall needs access to control other applications for integration features."
      }
    },
    "dmg": {
      "title": "LocalRecall Installer",
      "icon": "resources/icon.icns",
      "background": "resources/dmg-background.png",
      "iconSize": 80,
      "window": {
        "width": 600,
        "height": 420
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}